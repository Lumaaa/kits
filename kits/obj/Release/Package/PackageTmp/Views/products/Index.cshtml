@model IEnumerable<kits.Models.product>

@{
    ViewBag.Title = "Index";
}

<div class="titletext">Kits Shop</div>
<br />
<br />
<div class="shop">
    @foreach (var item in Model)
    {


        <div onclick="location.href = '@(Url.Action("Details", "products", new { id = item.product_ID }))'">

            <img src="~/images/placeholder.jpg" class="shopimage" /> 
            <div class="product-name-text">
            @Html.DisplayFor(modelItem => item.product_name)
            </div>
            <div class="product-price-text"> 
                @Html.DisplayFor(modelItem => item.product_price)
            </div>
        </div>

    }

</div>



