@model IEnumerable<kits.Models.product>

@{
    ViewBag.Title = "Index";
}

<h2>Kits Shop</h2>

<table class="table">
    <tr>
        <th> </th>
        <th> Name </th>
        <th> Description </th>
        <th> Price </th>
        <th> Brand </th>
        <th> Category </th>
        <th> Available sizes </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    var sizesString = "";
    if (item.XS > 0) { sizesString += "XS "; }
    if (item.S > 0) { sizesString += "S "; }
    if (item.M > 0) { sizesString += "M "; }
    if (item.L > 0) { sizesString += "L "; }
    if (item.XL > 0) { sizesString += "XL "; }

    <tr>
        <td>
            <img src="~/images/placeholder.jpg" style="width:300px;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.brand.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.category.name)
        </td>
        <td>
            @sizesString
        </td>
        <td>
          @Html.ActionLink("Details", "Details", new { id=item.product_ID })
        </td>
    </tr>
}

</table>
