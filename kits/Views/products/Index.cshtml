@model IEnumerable<kits.Models.product>

@{
    ViewBag.Title = "Index";
}

<h2>Kits Shop</h2>

<!--<p> @Html.ActionLink("Create New", "Create") </p> -->
<table class="table">
    <tr>
        <th> </th>
        <th> Name </th>
        <th> Description </th>
        <th> Price </th>
        <th> Brand </th>
        <th> Category </th>
        <th> Size </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/images/placeholder.jpg" style="width:300px;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.brand.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.category.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.size.size_name)
        </td>
        <td>
          <!-- @Html.ActionLink("Edit", "Edit", new { id=item.product_ID }) --> 
          @Html.ActionLink("Details", "Details", new { id=item.product_ID })
          <!-- @Html.ActionLink("Delete", "Delete", new { id=item.product_ID })-->
        </td>
    </tr>
}

</table>
