@model kits.Models.product

@{
    ViewBag.Title = "Details";
}

<h2>Product details</h2>
<div class="row">
    <div class="col-lg-5">
        <img src="~/images/placeholder.jpg" style="width:300px;" />
    </div>

    <div class="col-lg-7">
        <dl class="dl-horizontal">

            <dt>Name</dt>
            <dd>@Html.DisplayFor(model => model.product_name)</dd>

            <dt>Description</dt>
            <dd>@Html.DisplayFor(model => model.product_description)</dd>

            <dt>Price</dt>
            <dd>@Html.DisplayFor(model => model.product_price)</dd>

            <dt>Brand</dt>
            <dd>@Html.DisplayFor(model => model.brand.name)</dd>

            <dt>Category</dt>
            <dd>@Html.DisplayFor(model => model.category.name)</dd>

            <dt>Size</dt>
            <dd>@Html.DisplayFor(model => model.size.size_name)</dd>

        </dl>

        <div style="text-align:right">
            @using (Html.BeginForm("AddToCart", "Cart"))
            {
                @Html.Hidden("ProductId", Model.product_ID)
                @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                <input type="submit" class="btn btn-success" value="Add to cart" />
            }
        </div>
    </div>
</div>

