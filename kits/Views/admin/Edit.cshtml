@model kits.Models.order

@{
    ViewBag.Title = "Edit";
}
<div class="editview">
    <div class="head">
        <h2>Edit order</h2>
    </div>
    

    <div class="editstext">
        @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.order_ID)

        <div class="form-group editstate">
            @Html.LabelFor(model => model.users_ID, "Users", htmlAttributes: new { @class = "control-label col-md-2" }):
            @Html.DropDownList("users_ID", null, htmlAttributes: new { @class = "form-control editdrop" })
            @Html.DisplayFor(model => model.user.user_email)
            @Html.ValidationMessageFor(model => model.users_ID, "", new { @class = "text-danger" })
        </div>

            <div class="form-group editstate">
                @Html.LabelFor(model => model.state_ID, "State", htmlAttributes: new { @class = "control-label col-md-2" }):

                <span class="editstate">
                    @Html.DropDownList("state_ID", null, htmlAttributes: new { @class = "form-control editdrop" })
                    @Html.ValidationMessageFor(model => model.state_ID, "", new { @class = "text-danger" })
                </span>

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default edidtButtom" />
                    <input type="button" class="edidtButtom" value="Back to list" onclick="location.href='@Url.Action("index")'"/>
                </div>
            </div>
    
}
    </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
