@model kits.ViewModels.OrderDetails

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Order details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>State</dt>
        <dd>@Html.DisplayFor(model => model.Order.state.name)</dd>

        <dt>User email</dt>
        <dd>@Html.DisplayFor(model => model.Order.user.user_email)</dd>
    </dl>

    <table class="col-lg-12">
        @foreach (var orderItem in Model.OrderItems)
        {
            <tr>
                <td>
                    <img src="~/images/placeholder.jpg" style="width:100px;" />
                </td>
                <td>
                    <h4>@Html.DisplayFor(modelItem => orderItem.product.product_name)</h4>
                    <p>@Html.DisplayFor(modelItem => orderItem.product.brand.name)</p>
                </td>
                <td>
                    S
                </td>
                <td style="text-align:right">
                    @Html.DisplayFor(modelItem => orderItem.product.product_price) DKK
                </td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Order.order_ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
